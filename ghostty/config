theme = mercedes-petronas
background-opacity = .9
background-blur-radius = 100
font-size = 18
# Allow programs (like Vim) to write to the system clipboard via OSC 52
clipboard-write = "allow"

# If you want to paste from the system clipboard into the terminal without
# a prompt, switch this to "allow"; "ask" (the default) will prompt you.
clipboard-read  = "allow"

# Keep selection & system clipboards in sync when selecting text
copy-on-select = "clipboard"


# ~/.config/ghostty/config
# Route Command keys to tmux (Meta-...).
keybind = cmd+d=text:\x1bd
keybind = cmd+shift+d=text:\x1bD
keybind = cmd+t=text:\x1bt
keybind = cmd+shift+t=text:\x1bT
keybind = cmd+w=text:\x1bw
keybind = cmd+shift+w=text:\x1bW
keybind = cmd+1=text:\x1b1
