keybind = cmd+digit_7=text:\x1b7
keybind = cmd+digit_8=text:\x1b8
keybind = cmd+digit_9=text:\x1b9
keybind = cmd+[=text:\x1b[
keybind = cmd+]=text:\x1b]
keybind = cmd+bracket_left=text:\x1b[
keybind = cmd+bracket_right=text:\x1b]
keybind = cmd+r=text:\x1br
keybind = cmd+shift+r=text:\x1bR
keybind = cmd+f=text:\x1bf
keybind = ctrl+tab=text:\x1b[1;5C
keybind = ctrl+shift+tab=text:\x1b[1;5D
keybind = cmd+backquote=text:\x1b\x60
keybind = cmd+shift+backquote=text:\x1b\x7e
keybind = cmd+e=text:\x1be
keybind = cmd+s=text:\x1bs
keybind = cmd+z=text:\x1bz
keybind = cmd+e=text:\x1be
